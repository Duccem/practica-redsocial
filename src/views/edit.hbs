<div class="col-md-8">
    <div class="card">
        <div class="card-header bg-dark d-flex justify-content-between align-items-center">
            <h3 class="card-title text-white">
                <i class="fas fa-user"></i> {{user.username}}
            </h3>

        </div>
        <div class="card-body">
            <form action="/user/update" method="POST" enctype="multipart/form-data"  class="needs-validation" novalidate>
                <div class="col-md-2">
                    <div class="input-group">
                        <label for="image-update" title="Upload a new avatar image">
                            <img src="{{user.avatar}}" id="avatar" height="100" style="cursor: pointer; border:solid 1px #145da5;">
                        </label>
                        <label class="avatar-image" for="image-update">Change</label>
                        <input accept="image/*" type="file" name="image" id="image-update" class="custom-file-input">
                    </div>
                </div>
                <div class="col-md-10">
                    <div class="form-row">
                        <div class="form-group col-md-6">
                            <label for="" class="">First Name:</label>
                            <input class="form-control" type="text" name="firstname" placeholder="First name" value="{{user.firstname}}" required>
                        </div>
                        <div class="form-group col-md-6">
                            <label for="" class="">Last Name:</label>
                            <input class="form-control" type="text" name="lastname" placeholder="Last name"
                                value="{{user.lastname}}" id="" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please give a last name.
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="">Email:</label>
                        <input class="form-control" type="text" name="email" placeholder="email" value="{{user.email}}" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Please give a email.
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="">Description:</label>
                        <textarea class="form-control" placeholder="Biography" name="description"
                            value="" id="" cols="30" rows="3" required>{{user.description}}</textarea>
                            <div class="valid-feedback">
                            Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Please give a biography.
                            </div>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success">
                            <i class="fas fa-upload"></i> Save changes
                        </button>
                        <a id="cancelar" onclick="/profile/{{user.username}}" class="btn btn-danger text-white"
                            style="cursor: pointer">
                            <i class="fas fa-ban"></i> Cancel
                        </a>
                    </div>
                </div>
                
            </form>

        </div>
    </div>
</div>
<div class="col-md-4">
    {{> stats}}
    {{> popular}}
    {{> comments}}
</div>