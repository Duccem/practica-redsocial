<div class="card mb-2">
    <div class="card-header bg-dark text-white">
        <h5><i class="far fa-chart-bar"></i> Stats</h5>
    </div>
    <div class="card-body">
        {{#if sidebar.userStats}} 
            <p><i class="fas fa-images"></i> Images: {{sidebar.userStats.images}}</p>
            <p><i class="fas fa-heart"></i> Reactions: {{sidebar.userStats.likes}}</p>
        {{else}}
            <p><i class="fas fa-comments"></i> Commets: {{sidebar.stats.comments}}</p>
            <p><i class="fas fa-eye"></i> Views: {{sidebar.stats.views}}</p>
            <p><i class="fas fa-heart"></i> Likes: {{sidebar.stats.likes}}</p>
        {{/if}}
    </div>
</div>