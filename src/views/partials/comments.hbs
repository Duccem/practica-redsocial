{{#if sidebar.comments}}
    <div class="card mt-2">
        <div class="card-header bg-dark text-white">
            <h5><i class="fas fa-comments"></i> Lastest Commets</h5>
        </div>
    </div>
    <div class="card-body">
        {{#each sidebar.comments}}
            <div class="row">
                <div class="col">
                    <a href="/images/{{image.uniqueId}}">
                        <img class="w-100 h-100 image-thumbnail" src="/public/img/uploads/{{image.filename}}" alt="{{image.filename}}" title="{{image.filename}}">
                    </a>
                </div>
                <div class="col">
                    <blockquote class="w-100">
                        <p>{{comment}}</p>
                        <footer class="blockquote-footer">
                            {{name}} - {{timeago fecha_at}}
                        </footer>
                    </blockquote>
                </div>
            </div>
        {{/each}}
    </div>
{{/if}}