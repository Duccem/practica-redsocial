<div class="container col-md-7">
    <div class="card">
        <div class="card-header bg-dark">
            <h3 class="card-title text-white">
                <i class="fas fa-sign-in-alt"></i> Login
            </h3>
        </div>
        <div class="card-body">
            <form action="/user/login" class="needs-validation" method="POST" novalidate>
                <div class="form-group">
                    <label for="" class="">Username:</label>
                    <input class="form-control" type="text" name="username" id="" placeholder="User name" required>
                    <div class="invalid-feedback">
                        Please give a username.
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="">Password:</label>
                    <input class="form-control" type="password" name="password" id="" placeholder="Your password" required>
                    <div class="invalid-feedback">
                        Please give a password.
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-success">
                        <i class="fas fa-upload"></i> SignIn
                    </button>
                    <a id="cancelar" href="/signup" class="btn btn-info text-white" style="cursor: pointer">
                        <i class="fas fa-user-plus"></i> SignUp
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>