<div class="col-md-8">
    <div class="card">
        <div class="card-header bg-dark d-flex justify-content-between align-items-center">
            <h3 class="card-title text-white">
                <i class="fas fa-user"></i> {{user.username}}
            </h3>
            <button class="btn btn-info" id="btn-delete" >
                <i class="fas fa-edit"></i>
            </button>
        </div>
        <div class="card-body row">
            <div class="col-md-2">
                <img src="{{user.avatar}}" alt="" height="100">
            </div>
            <div class="col-md-10">
                <p><i class="fas fa-user"></i> {{user.firstname}} {{user.lastname}}</p>
                <p><i class="far fa-envelope"></i> {{user.email}}</p>
                <p><i class="fas fa-comment-alt"></i> {{user.description}}</p>
            </div>
        </div>
    </div><br>
    <div class="card">
        <div class="card-header bg-dark d-flex justify-content-between align-items-center">
            <div class="card-title text-white">
                <h3>
                    <i class="fas fa-image"></i> Posts
                </h3>
                
            </div>
        </div>
        <div class="card-body">
            <div class="row justify-content-between align-items-center">
                {{#each images}}
                <div class="col-md-3 card lista bg-dark" onclick="navegar('{{public_id}}')">
                    <div class="img-container">
                        <img title="{{title}}" src="{{path}}" alt="{{title}}" class="card-image-top">
                    </div>
                    <div class="card-body bg-dark text-white">
                        <div class="d-flex justify-content-center align-items-center " style="">
                        <i class="fas fa-heart"></i>&nbsp; {{likes.length}}  &nbsp;
                        <i class="fas fa-eye"></i>&nbsp; {{views.length}}
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div class="col-md-4">
    {{> stats}}
    {{> popular}}
    {{> comments}}
</div>